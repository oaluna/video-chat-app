{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "A chat application built with MERN and Socket.io",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mathur-prerit/Chat-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mathur-prerit/Chat-app/issues"
  },
  "homepage": "https://github.com/mathur-prerit/Chat-app#readme",
  "dependencies": {
    "concurrently": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.9.18",
    "morgan": "^1.10.0",
    "react-hot-loader": "^4.13.0",
    "socket.io": "^3.0.3",
    "winston": "^3.3.3",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
